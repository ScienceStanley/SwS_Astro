# Smarter with Science Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# OpenAI API Key for image generation
OPENAI_API_KEY=your_openai_api_key_here

# Discord Widget Configuration
PUBLIC_DISCORD_WIDGET_ID=your_discord_widget_id

# Analytics
PUBLIC_GA_MEASUREMENT_ID=your_google_analytics_id

# Vercel Configuration (if using Vercel CLI)
VERCEL_TOKEN=your_vercel_token

# API Endpoints
METRICS_API_ENDPOINT=https://api.smarterwithscience.org/metrics

# Feature Flags (optional)
PUBLIC_FEATURE_NEW_NAV=false
PUBLIC_FEATURE_ANIMATED_CHARTS=true
PUBLIC_FEATURE_AI_CHATBOT=false