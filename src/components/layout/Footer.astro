---
import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();

const footerLinks = {
  discover: [
    { label: 'Science Sunday', href: '/science-sunday' },
    { label: 'Projects', href: '/projects' },
    { label: 'Charter', href: '/charter' },
    { label: 'Blog', href: '/blog' },
  ],
  community: [
    { label: 'Discord', href: 'https://discord.com/invite/smarter', external: true },
    { label: 'GitHub', href: 'https://github.com/SmarterWithScience', external: true },
    { label: 'Newsletter', href: '/newsletter' },
    { label: 'Events', href: '/events' },
  ],
  resources: [
    { label: 'Get Started', href: '/get-started' },
    { label: 'Resources', href: '/resources' },
    { label: 'FAQ', href: '/faq' },
    { label: 'Contact', href: '/contact' },
  ],
};
---

<footer class="relative border-t border-default bg-background-offset overflow-hidden">
  <!-- Background grid effect -->
  <div class="absolute inset-0 cyber-grid opacity-5"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Main footer content -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
      <!-- Brand section -->
      <div class="md:col-span-1">
        <div class="flex items-center gap-3 mb-4">
          <Icon name="mdi:atom" class="w-8 h-8 text-primary" />
          <h3 class="font-display font-bold text-lg">SwS</h3>
        </div>
        <p class="text-text-offset mb-4">
          Science plus community equals exponential impact.
        </p>
        <!-- Social links -->
        <div class="flex gap-3">
          <a 
            href="https://discord.com/invite/smarter" 
            class="p-2 rounded-lg bg-background hover:bg-primary/10 border border-default hover:border-primary transition-all"
            aria-label="Discord"
          >
            <Icon name="mdi:discord" class="w-5 h-5 text-text-offset hover:text-primary" />
          </a>
          <a 
            href="https://github.com/SmarterWithScience" 
            class="p-2 rounded-lg bg-background hover:bg-primary/10 border border-default hover:border-primary transition-all"
            aria-label="GitHub"
          >
            <Icon name="mdi:github" class="w-5 h-5 text-text-offset hover:text-primary" />
          </a>
          <a 
            href="https://twitter.com/ScienceStanley" 
            class="p-2 rounded-lg bg-background hover:bg-primary/10 border border-default hover:border-primary transition-all"
            aria-label="Twitter"
          >
            <Icon name="mdi:twitter" class="w-5 h-5 text-text-offset hover:text-primary" />
          </a>
        </div>
      </div>
      
      <!-- Links sections -->
      <div>
        <h4 class="font-semibold text-text mb-4">Discover</h4>
        <ul class="space-y-2">
          {footerLinks.discover.map(link => (
            <li>
              <a 
                href={link.href} 
                class="text-text-offset hover:text-primary transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h4 class="font-semibold text-text mb-4">Community</h4>
        <ul class="space-y-2">
          {footerLinks.community.map(link => (
            <li>
              <a 
                href={link.href} 
                class="text-text-offset hover:text-primary transition-colors inline-flex items-center gap-1"
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
              >
                {link.label}
                {link.external && <Icon name="mdi:external-link" class="w-3 h-3" />}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h4 class="font-semibold text-text mb-4">Resources</h4>
        <ul class="space-y-2">
          {footerLinks.resources.map(link => (
            <li>
              <a 
                href={link.href} 
                class="text-text-offset hover:text-primary transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Newsletter section -->
    <div class="border-t border-default pt-8 mb-8">
      <div class="max-w-md mx-auto text-center">
        <h3 class="font-display font-semibold text-lg mb-2">Stay in the Loop</h3>
        <p class="text-text-offset mb-4">Get weekly updates on breakthrough research and community events.</p>
        <form class="flex gap-2" data-newsletter-form>
          <input 
            type="email" 
            placeholder="your@email.com" 
            required
            class="flex-1 px-4 py-2 bg-background border border-default rounded-lg focus:outline-none focus:border-primary transition-colors"
          />
          <button 
            type="submit"
            class="px-6 py-2 bg-primary text-background font-semibold rounded-lg hover:bg-primary/90 transition-colors"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
    
    <!-- Bottom section -->
    <div class="border-t border-default pt-8 flex flex-col sm:flex-row justify-between items-center gap-4 text-sm text-text-muted">
      <p>© {currentYear} Smarter with Science. Building the future, together.</p>
      <div class="flex gap-6">
        <a href="/privacy" class="hover:text-primary transition-colors">Privacy</a>
        <a href="/terms" class="hover:text-primary transition-colors">Terms</a>
        <a href="/code-of-conduct" class="hover:text-primary transition-colors">Code of Conduct</a>
      </div>
    </div>
  </div>
  
  <!-- Stanley quote -->
  <div class="relative text-center py-6 bg-primary/5 border-t border-default">
    <p class="text-text-offset italic">
      "Your curiosity could spark the next breakthrough."
      <span class="block text-primary mt-1">- Science Stanley</span>
    </p>
  </div>
</footer>

<script>
  // Newsletter form handling
  const form = document.querySelector('[data-newsletter-form]') as HTMLFormElement;
  
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const button = form.querySelector('button');
      const originalText = button?.textContent;
      
      if (button) {
        button.textContent = 'Subscribing...';
        button.setAttribute('disabled', 'true');
      }
      
      // Simulate API call
      setTimeout(() => {
        form.reset();
        if (button) {
          button.textContent = '✓ Subscribed!';
          setTimeout(() => {
            button.textContent = originalText || 'Subscribe';
            button.removeAttribute('disabled');
          }, 3000);
        }
      }, 1500);
    });
  }
</script>