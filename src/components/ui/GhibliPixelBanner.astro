---
export interface Props {
  variant?: 'hero' | 'section' | 'minimal';
  height?: string;
  className?: string;
}

const { 
  variant = 'hero',
  height = '400px',
  className = ''
} = Astro.props;
---

<div class={`ghibli-pixel-banner ghibli-${variant} ${className}`} style={`min-height: ${height}`}>
  <!-- Pixel Art Forest Background -->
  <div class="pixel-forest">
    <!-- Digital Trees -->
    <div class="digital-trees">
      <div class="tree tree-1">
        <div class="trunk"></div>
        <div class="leaves leaves-1"></div>
        <div class="leaves leaves-2"></div>
        <div class="leaves leaves-3"></div>
      </div>
      <div class="tree tree-2">
        <div class="trunk"></div>
        <div class="leaves leaves-1"></div>
        <div class="leaves leaves-2"></div>
      </div>
      <div class="tree tree-3">
        <div class="trunk"></div>
        <div class="leaves leaves-1"></div>
        <div class="leaves leaves-2"></div>
        <div class="leaves leaves-3"></div>
      </div>
    </div>
    
    <!-- Data Streams -->
    <div class="data-streams">
      <div class="stream stream-1"></div>
      <div class="stream stream-2"></div>
      <div class="stream stream-3"></div>
      <div class="stream stream-4"></div>
    </div>
    
    <!-- Floating Elements -->
    <div class="floating-elements">
      <!-- Data Crystals -->
      <div class="crystal crystal-1"></div>
      <div class="crystal crystal-2"></div>
      <div class="crystal crystal-3"></div>
      <div class="crystal crystal-4"></div>
      
      <!-- Forest Spirits -->
      <div class="spirit spirit-1">
        <div class="spirit-core"></div>
        <div class="spirit-glow"></div>
      </div>
      <div class="spirit spirit-2">
        <div class="spirit-core"></div>
        <div class="spirit-glow"></div>
      </div>
      
      <!-- Pixel Particles -->
      <div class="particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
      </div>
    </div>
    
    <!-- Science Stanley Avatar -->
    <div class="science-stanley">
      <div class="stanley-body">
        <div class="head"></div>
        <div class="torso"></div>
        <div class="arm-left"></div>
        <div class="arm-right"></div>
        <div class="lab-coat"></div>
      </div>
      <div class="data-aura"></div>
      <div class="molecule-display">
        <div class="atom"></div>
        <div class="electron"></div>
        <div class="electron"></div>
        <div class="electron"></div>
      </div>
    </div>
  </div>
  
  <!-- Content Overlay -->
  <div class="banner-content">
    <slot />
  </div>
</div>

<style>
  .ghibli-pixel-banner {
    position: relative;
    overflow: hidden;
    background: linear-gradient(180deg, #000000 0%, #0f0f23 50%, #1a1a2e 100%);
    image-rendering: pixelated;
    image-rendering: -moz-crisp-edges;
    image-rendering: crisp-edges;
  }
  
  .pixel-forest {
    position: absolute;
    inset: 0;
    opacity: 0.8;
  }
  
  /* Digital Trees - Pixel Art Style */
  .digital-trees {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 60%;
  }
  
  .tree {
    position: absolute;
    bottom: 0;
  }
  
  .tree-1 {
    left: 10%;
    height: 180px;
    width: 40px;
  }
  
  .tree-2 {
    left: 30%;
    height: 120px;
    width: 30px;
  }
  
  .tree-3 {
    right: 15%;
    height: 160px;
    width: 35px;
  }
  
  .trunk {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 8px;
    height: 40%;
    background: #4a5568;
    border-radius: 0;
    box-shadow: 
      inset 2px 0 0 #2d3748,
      inset -2px 0 0 #718096;
  }
  
  .leaves {
    position: absolute;
    background: #38a169;
    border-radius: 0;
    animation: tree-sway 4s ease-in-out infinite;
  }
  
  .leaves-1 {
    top: 20%;
    left: 20%;
    width: 24px;
    height: 16px;
    background: #48bb78;
    box-shadow: 
      inset 2px 2px 0 #68d391,
      2px 2px 4px rgba(0, 255, 136, 0.3);
  }
  
  .leaves-2 {
    top: 35%;
    left: 10%;
    width: 32px;
    height: 20px;
    background: #38a169;
    box-shadow: 
      inset 2px 2px 0 #48bb78,
      2px 2px 4px rgba(0, 255, 136, 0.2);
  }
  
  .leaves-3 {
    top: 50%;
    left: 5%;
    width: 28px;
    height: 18px;
    background: #2f855a;
    box-shadow: 
      inset 2px 2px 0 #38a169,
      2px 2px 4px rgba(0, 255, 136, 0.1);
  }
  
  @keyframes tree-sway {
    0%, 100% { transform: rotate(0deg); }
    50% { transform: rotate(2deg); }
  }
  
  /* Data Streams */
  .data-streams {
    position: absolute;
    inset: 0;
  }
  
  .stream {
    position: absolute;
    width: 2px;
    height: 100%;
    background: linear-gradient(180deg, 
      transparent 0%, 
      #00d4ff 20%, 
      #663399 50%, 
      #00d4ff 80%, 
      transparent 100%);
    animation: data-flow 3s linear infinite;
    opacity: 0.6;
  }
  
  .stream-1 {
    left: 25%;
    animation-delay: 0s;
  }
  
  .stream-2 {
    left: 50%;
    animation-delay: 1s;
  }
  
  .stream-3 {
    left: 75%;
    animation-delay: 2s;
  }
  
  .stream-4 {
    right: 10%;
    animation-delay: 1.5s;
  }
  
  @keyframes data-flow {
    0% { transform: translateY(-100%); opacity: 0; }
    50% { opacity: 0.8; }
    100% { transform: translateY(100%); opacity: 0; }
  }
  
  /* Floating Elements */
  .floating-elements {
    position: absolute;
    inset: 0;
  }
  
  /* Data Crystals */
  .crystal {
    position: absolute;
    width: 8px;
    height: 8px;
    background: #00d4ff;
    transform: rotate(45deg);
    animation: crystal-float 4s ease-in-out infinite;
    box-shadow: 
      0 0 8px #00d4ff,
      inset 2px 2px 0 rgba(255, 255, 255, 0.3),
      inset -2px -2px 0 rgba(0, 0, 0, 0.3);
  }
  
  .crystal-1 {
    top: 30%;
    left: 20%;
    animation-delay: 0s;
  }
  
  .crystal-2 {
    top: 60%;
    right: 30%;
    animation-delay: 2s;
    background: #663399;
    box-shadow: 
      0 0 8px #663399,
      inset 2px 2px 0 rgba(255, 255, 255, 0.3),
      inset -2px -2px 0 rgba(0, 0, 0, 0.3);
  }
  
  .crystal-3 {
    top: 20%;
    right: 20%;
    animation-delay: 1s;
    background: #00ff88;
    box-shadow: 
      0 0 8px #00ff88,
      inset 2px 2px 0 rgba(255, 255, 255, 0.3),
      inset -2px -2px 0 rgba(0, 0, 0, 0.3);
  }
  
  .crystal-4 {
    bottom: 40%;
    left: 60%;
    animation-delay: 3s;
  }
  
  @keyframes crystal-float {
    0%, 100% { 
      transform: rotate(45deg) translateY(0px);
      opacity: 0.6;
    }
    50% { 
      transform: rotate(45deg) translateY(-20px);
      opacity: 1;
    }
  }
  
  /* Forest Spirits */
  .spirit {
    position: absolute;
    width: 16px;
    height: 16px;
    animation: spirit-wander 6s ease-in-out infinite;
  }
  
  .spirit-1 {
    top: 40%;
    left: 40%;
    animation-delay: 0s;
  }
  
  .spirit-2 {
    top: 70%;
    right: 40%;
    animation-delay: 3s;
  }
  
  .spirit-core {
    width: 8px;
    height: 8px;
    background: #ffffff;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    box-shadow: 0 0 4px #ffffff;
  }
  
  .spirit-glow {
    width: 16px;
    height: 16px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
    border-radius: 50%;
    animation: spirit-pulse 2s ease-in-out infinite;
  }
  
  @keyframes spirit-wander {
    0%, 100% { transform: translate(0, 0); }
    25% { transform: translate(20px, -10px); }
    50% { transform: translate(-10px, -20px); }
    75% { transform: translate(-15px, 10px); }
  }
  
  @keyframes spirit-pulse {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.2); }
  }
  
  /* Pixel Particles */
  .particles {
    position: absolute;
    inset: 0;
  }
  
  .particle {
    position: absolute;
    width: 2px;
    height: 2px;
    background: #ffffff;
    animation: particle-sparkle 3s linear infinite;
  }
  
  .particle:nth-child(1) {
    top: 25%;
    left: 15%;
    animation-delay: 0s;
  }
  
  .particle:nth-child(2) {
    top: 45%;
    left: 35%;
    animation-delay: 1s;
  }
  
  .particle:nth-child(3) {
    top: 65%;
    right: 25%;
    animation-delay: 2s;
  }
  
  .particle:nth-child(4) {
    top: 35%;
    right: 45%;
    animation-delay: 0.5s;
  }
  
  .particle:nth-child(5) {
    bottom: 30%;
    left: 70%;
    animation-delay: 1.5s;
  }
  
  .particle:nth-child(6) {
    top: 80%;
    left: 80%;
    animation-delay: 2.5s;
  }
  
  @keyframes particle-sparkle {
    0%, 100% { opacity: 0; transform: scale(0); }
    50% { opacity: 1; transform: scale(1); }
  }
  
  /* Science Stanley Avatar */
  .science-stanley {
    position: absolute;
    right: 10%;
    bottom: 20%;
    width: 60px;
    height: 80px;
    animation: stanley-bob 3s ease-in-out infinite;
  }
  
  .stanley-body {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .head {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 20px;
    height: 20px;
    background: #f7fafc;
    border-radius: 0;
    box-shadow: 
      inset 2px 2px 0 rgba(255, 255, 255, 0.5),
      inset -2px -2px 0 rgba(0, 0, 0, 0.2),
      2px 2px 4px rgba(102, 51, 153, 0.3);
  }
  
  .torso {
    position: absolute;
    top: 25px;
    left: 50%;
    transform: translateX(-50%);
    width: 24px;
    height: 30px;
    background: #2d3748;
    box-shadow: 
      inset 2px 2px 0 #4a5568,
      inset -2px -2px 0 #1a202c;
  }
  
  .lab-coat {
    position: absolute;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 28px;
    height: 35px;
    background: #ffffff;
    opacity: 0.9;
    box-shadow: 
      inset 2px 2px 0 rgba(255, 255, 255, 0.8),
      inset -2px -2px 0 rgba(0, 0, 0, 0.1),
      2px 2px 6px rgba(0, 212, 255, 0.2);
  }
  
  .arm-left, .arm-right {
    position: absolute;
    top: 30px;
    width: 8px;
    height: 20px;
    background: #f7fafc;
  }
  
  .arm-left {
    left: 8px;
    animation: arm-wave 2s ease-in-out infinite;
  }
  
  .arm-right {
    right: 8px;
    animation: arm-wave 2s ease-in-out infinite reverse;
  }
  
  @keyframes stanley-bob {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-5px); }
  }
  
  @keyframes arm-wave {
    0%, 100% { transform: rotateZ(0deg); }
    50% { transform: rotateZ(15deg); }
  }
  
  .data-aura {
    position: absolute;
    inset: -10px;
    background: radial-gradient(circle, rgba(102, 51, 153, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    animation: aura-pulse 3s ease-in-out infinite;
  }
  
  @keyframes aura-pulse {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.1); }
  }
  
  /* Molecule Display */
  .molecule-display {
    position: absolute;
    top: -20px;
    left: -30px;
    width: 40px;
    height: 40px;
  }
  
  .atom {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 6px;
    height: 6px;
    background: #00d4ff;
    border-radius: 50%;
    box-shadow: 0 0 6px #00d4ff;
  }
  
  .electron {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 3px;
    height: 3px;
    background: #ffffff;
    border-radius: 50%;
    animation: electron-orbit 2s linear infinite;
  }
  
  .electron:nth-child(2) {
    animation-delay: 0s;
    animation-duration: 2s;
  }
  
  .electron:nth-child(3) {
    animation-delay: 0.66s;
    animation-duration: 2s;
  }
  
  .electron:nth-child(4) {
    animation-delay: 1.33s;
    animation-duration: 2s;
  }
  
  @keyframes electron-orbit {
    0% { transform: translate(-50%, -50%) rotate(0deg) translateX(15px) rotate(0deg); }
    100% { transform: translate(-50%, -50%) rotate(360deg) translateX(15px) rotate(-360deg); }
  }
  
  /* Content Overlay */
  .banner-content {
    position: relative;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: inherit;
    padding: 2rem;
    background: rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(1px);
  }
  
  /* Variant Styles */
  .ghibli-hero {
    min-height: 60vh;
  }
  
  .ghibli-section {
    min-height: 300px;
  }
  
  .ghibli-minimal {
    min-height: 200px;
  }
  
  .ghibli-minimal .pixel-forest {
    opacity: 0.4;
  }
  
  .ghibli-minimal .science-stanley {
    display: none;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .science-stanley {
      right: 5%;
      bottom: 10%;
      transform: scale(0.8);
    }
    
    .tree {
      transform: scale(0.8);
    }
    
    .floating-elements {
      transform: scale(0.9);
    }
  }
  
  @media (max-width: 480px) {
    .banner-content {
      padding: 1rem;
    }
    
    .science-stanley {
      display: none;
    }
    
    .floating-elements {
      transform: scale(0.7);
    }
  }
</style>