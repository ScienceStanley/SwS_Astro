        button.setAttribute('disabled', 'true');
      }
      
      // Simulate API call
      setTimeout(() => {
        rsvpForm.reset();
        if (button) {
          button.textContent = 'See you Sunday!';
          button.style.background = 'var(--plasma-green)';
          
          setTimeout(() => {
            button.textContent = 'RSVP for Next Sunday';
            button.removeAttribute('disabled');
            button.style.background = '';
          }, 3000);
        }
      }, 1500);
    });
  }
