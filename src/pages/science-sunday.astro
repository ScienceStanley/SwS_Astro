---
import BaseLayout from '@layouts/BaseLayout.astro';
import Button from '@components/ui/Button.astro';
import Card from '@components/ui/Card.astro';
import StatCounter from '@components/ui/StatCounter.astro';
import { Icon } from 'astro-icon/components';

const pageTitle = 'Science Sunday - Where Curiosity Becomes Community';
const pageDescription = '90% of attendees say Science Sunday changed their career trajectory. Join the intellectual adventure that happens every Sunday in Venice Beach.';

// Success stories data
const successStories = [
  {
    quote: "I came for the coffee, stayed for the quantum physics discussion that led to my startup.",
    author: "Alex Chen",
    role: "CEO, QuantumLeap Technologies",
    image: "mdi:account-circle",
    metric: "Founded 2023"
  },
  {
    quote: "Found my co-founder over discussions about algae biofuels. We're now processing 10,000L daily.",
    author: "Dr. Maria Santos",
    role: "CTO, AlgaeFuture",
    image: "mdi:account-circle",
    metric: "$2M raised"
  },
  {
    quote: "My Sunday ritual: Beach walk → Science Sunday → Mind blown → Repeat. Haven't missed one in 6 months.",
    author: "Jake Williams",
    role: "Data Scientist & Regular",
    image: "mdi:account-circle",
    metric: "26 Sundays"
  },
  {
    quote: "The discussions here led to our research being featured in Nature. Science Sunday is where magic happens.",
    author: "Dr. Priya Patel",
    role: "Research Lead, MIT",
    image: "mdi:account-circle",
    metric: "3 papers published"
  }
];

// Timeline events
const timeline = [
  {
    time: "1:00 PM",
    title: "The Convergence",
    description: "Watch strangers become collaborators over artisan coffee",
    icon: "mdi:coffee",
    vibe: "Energy builds"
  },
  {
    time: "2:00 PM",
    title: "The Spark",
    description: "Ideas collide, projects are born, connections ignite",
    icon: "mdi:lightning-bolt",
    vibe: "Peak creativity"
  },
  {
    time: "3:00 PM",
    title: "The Deep Dive",
    description: "Stanley's story time meets cutting-edge science",
    icon: "mdi:telescope",
    vibe: "Mind = Blown"
  },
  {
    time: "4:00 PM",
    title: "The Connections",
    description: "LinkedIn requests fly, Discord channels form",
    icon: "mdi:account-group",
    vibe: "Network effect"
  },
  {
    time: "5:00 PM",
    title: "The Afterglow",
    description: "Groups spill onto Venice Beach, conversations continue",
    icon: "mdi:beach",
    vibe: "Until next Sunday"
  }
];

// Upcoming topics
const upcomingTopics = [
  { date: "This Sunday", topic: "CRISPR meets Coffee: Gene Editing for Everyone", votes: 127 },
  { date: "Dec 8", topic: "Quantum Computing: From Qubits to Reality", votes: 89 },
  { date: "Dec 15", topic: "Mycelium Networks: Nature's Internet", votes: 76 },
  { date: "Dec 22", topic: "Space Sustainability: Cleaning Up Our Orbit", votes: 64 }
];

// Global chapters data
const chapters = [
  { city: "Venice Beach, CA", status: "active", attendees: 237, time: "1-5 PM PST" },
  { city: "Brooklyn, NY", status: "launching", interested: 156, launchDate: "January 2025" },
  { city: "Austin, TX", status: "forming", interested: 89, launchDate: "February 2025" },
  { city: "London, UK", status: "interest", interested: 234, launchDate: "Spring 2025" }
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="min-h-screen">
    <!-- Hero Section with Dynamic Elements -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-sunrise">
      <!-- Animated sunrise gradient background -->
      <div class="absolute inset-0">
        <div class="sunrise-gradient"></div>
        <div class="particle-connections"></div>
      </div>
      
      <div class="relative z-10 text-center px-6 max-w-6xl mx-auto">
        <!-- Live Counter Badge -->
        <div class="inline-flex items-center gap-2 bg-bg-secondary/80 backdrop-blur px-4 py-2 rounded-full mb-6 animate-pulse-subtle">
          <div class="w-2 h-2 bg-plasma-green rounded-full animate-pulse"></div>
          <span class="text-sm font-mono text-text-secondary">
            <StatCounter end={237} duration={1000} /> curious minds gathering this Sunday
          </span>
        </div>
        
        <!-- Main Hero Content -->
        <h1 class="text-5xl md:text-7xl font-display font-bold mb-6 animate-fade-in">
          Where Curiosity Becomes
          <span class="text-gradient-sunrise block">Community</span>
          <span class="text-2xl md:text-3xl font-normal text-text-secondary mt-4">Every Sunday</span>
        </h1>
        
        <p class="text-xl md:text-2xl text-text-secondary max-w-3xl mx-auto mb-8 animate-fade-in animation-delay-200">
          90% of attendees say Science Sunday changed their career trajectory. 
          Join the intellectual adventure that's creating breakthroughs every week.
        </p>
        
        <!-- This Week's Topic Preview -->
        <div class="bg-bg-tertiary/60 backdrop-blur-md rounded-lg p-6 max-w-2xl mx-auto mb-8 animate-fade-in animation-delay-400 border border-border-accent">
          <p class="text-sm text-text-tertiary mb-2">This Sunday's Deep Dive:</p>
          <h2 class="text-2xl font-display font-bold text-gradient mb-2">CRISPR meets Coffee: Gene Editing for Everyone</h2>
          <p class="text-text-secondary">Plus: Live demos, breakthrough announcements, and Stanley's famous "What If?" session</p>
        </div>
        
        <!-- CTAs with Countdown -->
        <div class="flex flex-col items-center gap-6 animate-fade-in animation-delay-600">
          <div class="flex flex-col sm:flex-row gap-4">
            <Button variant="primary" size="large" href="#rsvp" icon="mdi:calendar-check" className="group">
              <span class="group-hover:hidden">Save My Spot</span>
              <span class="hidden group-hover:inline">Join 237 Others</span>
            </Button>
            <Button variant="outline" size="large" href="#experience" icon="mdi:arrow-down">
              See What Happens
            </Button>
          </div>
          
          <!-- Live Countdown -->
          <div class="flex items-center gap-6 text-center" data-countdown>
            <div>
              <div class="text-3xl font-mono font-bold text-quantum-blue" data-days>0</div>
              <div class="text-xs text-text-tertiary uppercase tracking-wider">Days</div>
            </div>
            <div class="text-2xl text-text-tertiary">:</div>
            <div>
              <div class="text-3xl font-mono font-bold text-quantum-blue" data-hours>00</div>
              <div class="text-xs text-text-tertiary uppercase tracking-wider">Hours</div>
            </div>
            <div class="text-2xl text-text-tertiary">:</div>
            <div>
              <div class="text-3xl font-mono font-bold text-quantum-blue" data-minutes>00</div>
              <div class="text-xs text-text-tertiary uppercase tracking-wider">Minutes</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <Icon name="mdi:chevron-down" class="w-8 h-8 text-text-tertiary opacity-60" />
      </div>
    </section>
    
    <!-- Social Proof Bar -->
    <section class="bg-bg-secondary border-y border-border-primary py-4">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
          <div>
            <div class="text-2xl font-bold font-mono text-quantum-blue">
              <StatCounter end={12847} />
            </div>
            <div class="text-sm text-text-tertiary">Connections Made</div>
          </div>
          <div>
            <div class="text-2xl font-bold font-mono text-plasma-green">
              <StatCounter end={347} />
            </div>
            <div class="text-sm text-text-tertiary">Projects Launched</div>
          </div>
          <div>
            <div class="text-2xl font-bold font-mono text-fusion-purple">
              <StatCounter end={52} />
            </div>
            <div class="text-sm text-text-tertiary">Sundays & Counting</div>
          </div>
          <div>
            <div class="text-2xl font-bold font-mono text-solar-orange">
              <StatCounter end={4.9} decimals={1} suffix="/5" />
            </div>
            <div class="text-sm text-text-tertiary">Average Rating</div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- The Experience Timeline -->
    <section id="experience" class="py-20 px-6 bg-bg-primary">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-display font-bold mb-4">
            What Really Happens at <span class="text-gradient">Science Sunday</span>
          </h2>
          <p class="text-xl text-text-secondary max-w-2xl mx-auto">
            Four hours that consistently change trajectories. Here's your Sunday transformation timeline:
          </p>
        </div>
        
        <!-- Interactive Timeline -->
        <div class="relative">
          <!-- Timeline Line -->
          <div class="absolute left-8 md:left-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-quantum-blue via-plasma-green to-fusion-purple"></div>
          
          {timeline.map((event, index) => (
            <div class={`relative flex items-center mb-12 ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'} animate-fade-in animation-delay-${(index + 1) * 200}`}>
              <!-- Timeline Node -->
              <div class="absolute left-8 md:left-1/2 w-4 h-4 bg-quantum-blue rounded-full transform -translate-x-1/2 ring-4 ring-bg-primary animate-pulse-subtle"></div>
              
              <!-- Content -->
              <div class={`ml-20 md:ml-0 md:w-1/2 ${index % 2 === 0 ? 'md:pr-12 md:text-right' : 'md:pl-12'}`}>
                <Card variant="glass" className="p-6 hover:scale-105 transition-transform">
                  <div class={`flex items-center gap-4 mb-3 ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
                    <Icon name={event.icon} class="w-8 h-8 text-quantum-blue" />
                    <div>
                      <h3 class="text-xl font-bold text-text-primary">{event.time}</h3>
                      <h4 class="text-2xl font-display text-gradient">{event.title}</h4>
                    </div>
                  </div>
                  <p class="text-text-secondary mb-2">{event.description}</p>
                  <p class="text-sm text-plasma-green font-mono">{event.vibe}</p>
                </Card>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Success Stories Carousel -->
    <section class="py-20 px-6 bg-bg-secondary">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-display font-bold mb-4">
            Real People, <span class="text-gradient">Real Breakthroughs</span>
          </h2>
          <p class="text-xl text-text-secondary max-w-2xl mx-auto">
            Every Sunday creates new success stories. Here are just a few:
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8">
          {successStories.map((story, index) => (
            <Card variant="highlight" className={`animate-fade-in animation-delay-${(index + 1) * 100}`}>
              <blockquote class="mb-6">
                <p class="text-lg text-text-secondary italic">"{story.quote}"</p>
              </blockquote>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <Icon name={story.image} class="w-12 h-12 text-text-tertiary" />
                  <div>
                    <p class="font-semibold text-text-primary">{story.author}</p>
                    <p class="text-sm text-text-tertiary">{story.role}</p>
                  </div>
                </div>
                <div class="text-right">
                  <p class="text-sm font-mono text-plasma-green">{story.metric}</p>
                </div>
              </div>
            </Card>
          ))}
        </div>
        
        <div class="text-center mt-12">
          <p class="text-text-secondary mb-4">Join them this Sunday</p>
          <Button variant="primary" href="#rsvp" icon="mdi:arrow-right" iconPosition="right">
            Claim Your Spot
          </Button>
        </div>
      </div>
    </section>
    
    <!-- Venue & Location -->
    <section class="py-20 px-6 bg-bg-primary">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-4xl font-display font-bold mb-6">
              Your Sunday <span class="text-gradient">Headquarters</span>
            </h2>
            
            <div class="space-y-6 mb-8">
              <div class="flex items-start gap-4">
                <Icon name="mdi:map-marker" class="w-6 h-6 text-quantum-blue mt-1" />
                <div>
                  <h3 class="font-bold text-text-primary mb-1">KINN Venice</h3>
                  <p class="text-text-secondary">518 Rose Ave, Venice, CA 90291</p>
                  <p class="text-sm text-text-tertiary mt-1">2 blocks from Venice Beach</p>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <Icon name="mdi:clock-outline" class="w-6 h-6 text-plasma-green mt-1" />
                <div>
                  <h3 class="font-bold text-text-primary mb-1">Every Sunday</h3>
                  <p class="text-text-secondary">1:00 PM - 5:00 PM PST</p>
                  <p class="text-sm text-text-tertiary mt-1">Doors open at 12:45 PM</p>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <Icon name="mdi:currency-usd-off" class="w-6 h-6 text-fusion-purple mt-1" />
                <div>
                  <h3 class="font-bold text-text-primary mb-1">Always Free</h3>
                  <p class="text-text-secondary">No tickets, no barriers</p>
                  <p class="text-sm text-text-tertiary mt-1">Coffee donations welcome</p>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <Icon name="mdi:parking" class="w-6 h-6 text-solar-orange mt-1" />
                <div>
                  <h3 class="font-bold text-text-primary mb-1">Easy Access</h3>
                  <p class="text-text-secondary">Street parking & nearby lots</p>
                  <p class="text-sm text-text-tertiary mt-1">Bike racks available</p>
                </div>
              </div>
            </div>
            
            <div class="flex gap-4">
              <Button variant="secondary" href="https://maps.google.com/?q=KINN+Venice+518+Rose+Ave" icon="mdi:map" size="small">
                Get Directions
              </Button>
              <Button variant="ghost" href="#parking" icon="mdi:car" size="small">
                Parking Tips
              </Button>
            </div>
          </div>
          
          <!-- Interactive Map Placeholder -->
          <Card variant="glass" className="h-96 relative overflow-hidden group">
            <div class="absolute inset-0 bg-gradient-to-br from-quantum-blue/20 to-plasma-green/20"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center">
                <Icon name="mdi:map-marker" class="w-16 h-16 text-quantum-blue mb-4 animate-bounce" />
                <p class="text-text-secondary mb-4">KINN Venice Beach</p>
                <Button variant="outline" href="https://maps.google.com/?q=KINN+Venice+518+Rose+Ave" size="small">
                  Open in Maps
                </Button>
              </div>
            </div>
            <div class="absolute top-4 right-4 bg-bg-primary/80 backdrop-blur px-3 py-1 rounded-full">
              <p class="text-xs text-text-tertiary">2 min walk to beach</p>
            </div>
          </Card>
        </div>
      </div>
    </section>
    
    <!-- Topics & Voting -->
    <section class="py-20 px-6 bg-bg-secondary">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-display font-bold mb-4">
            You Choose the <span class="text-gradient">Conversations</span>
          </h2>
          <p class="text-xl text-text-secondary max-w-2xl mx-auto">
            Vote on upcoming topics or suggest your own. Science Sunday is community-driven.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8 mb-12">
          {upcomingTopics.map((topic, index) => (
            <Card variant="default" className={`animate-fade-in animation-delay-${(index + 1) * 100}`}>
              <div class="flex items-start justify-between mb-4">
                <div>
                  <p class="text-sm text-text-tertiary mb-1">{topic.date}</p>
                  <h3 class="text-xl font-bold text-text-primary">{topic.topic}</h3>
                </div>
                <div class="text-right">
                  <p class="text-2xl font-mono font-bold text-quantum-blue">{topic.votes}</p>
                  <p class="text-xs text-text-tertiary">votes</p>
                </div>
              </div>
              <div class="flex gap-2">
                <Button variant="ghost" size="small" icon="mdi:thumb-up" className="flex-1">
                  Vote
                </Button>
                <Button variant="ghost" size="small" icon="mdi:share" className="flex-1">
                  Share
                </Button>
              </div>
            </Card>
          ))}
        </div>
        
        <div class="text-center">
          <Button variant="outline" icon="mdi:lightbulb" size="large">
            Suggest a Topic
          </Button>
        </div>
      </div>
    </section>
    
    <!-- Global Movement -->
    <section class="py-20 px-6 bg-bg-primary">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-display font-bold mb-4">
            Science Sunday Goes <span class="text-gradient">Global</span>
          </h2>
          <p class="text-xl text-text-secondary max-w-2xl mx-auto">
            The curiosity is contagious. Join or start a chapter in your city.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {chapters.map((chapter, index) => (
            <Card 
              variant={chapter.status === 'active' ? 'highlight' : 'glass'} 
              className={`text-center animate-fade-in animation-delay-${(index + 1) * 100}`}
            >
              <Icon 
                name="mdi:map-marker" 
                class={`w-8 h-8 mx-auto mb-3 ${chapter.status === 'active' ? 'text-plasma-green' : 'text-text-tertiary'}`} 
              />
              <h3 class="text-xl font-bold mb-2">{chapter.city}</h3>
              {chapter.status === 'active' ? (
                <>
                  <p class="text-plasma-green font-mono mb-1">{chapter.attendees} attending</p>
                  <p class="text-sm text-text-tertiary">{chapter.time}</p>
                </>
              ) : (
                <>
                  <p class="text-text-secondary mb-1">{chapter.interested} interested</p>
                  <p class="text-sm text-text-tertiary">{chapter.launchDate}</p>
                  <Button variant="ghost" size="small" className="mt-3">
                    Get Updates
                  </Button>
                </>
              )}
            </Card>
          ))}
        </div>
        
        <div class="text-center mt-12">
          <p class="text-text-secondary mb-4">Don't see your city?</p>
          <Button variant="primary" href="/start-chapter" icon="mdi:rocket-launch">
            Start a Chapter
          </Button>
        </div>
      </div>
    </section>
    
    <!-- Enhanced RSVP Section -->
    <section id="rsvp" class="py-20 px-6 bg-gradient-aurora text-white">
      <div class="max-w-4xl mx-auto">
        <Card variant="glass" className="p-8 md:p-12 text-center backdrop-blur-xl">
          <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
            Your Sunday Transformation Awaits
          </h2>
          <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
            RSVP to unlock topic voting, get reminders, and receive the famous 
            "Science Sunday Digest" with key insights from each gathering.
          </p>
          
          <form class="max-w-2xl mx-auto" data-rsvp-form>
            <div class="grid md:grid-cols-2 gap-4 mb-6">
              <div>
                <input 
                  type="text" 
                  name="firstName" 
                  placeholder="First Name" 
                  required
                  class="w-full px-4 py-3 bg-white/10 backdrop-blur border border-white/20 rounded-lg text-white placeholder-white/60 focus:outline-none focus:border-white/40 transition-colors"
                />
              </div>
              <div>
                <input 
                  type="text" 
                  name="lastName" 
                  placeholder="Last Name" 
                  required
                  class="w-full px-4 py-3 bg-white/10 backdrop-blur border border-white/20 rounded-lg text-white placeholder-white/60 focus:outline-none focus:border-white/40 transition-colors"
                />
              </div>
            </div>
            
            <div class="mb-6">
              <input 
                type="email" 
                name="email" 
                placeholder="your@email.com" 
                required
                class="w-full px-4 py-3 bg-white/10 backdrop-blur border border-white/20 rounded-lg text-white placeholder-white/60 focus:outline-none focus:border-white/40 transition-colors"
              />
            </div>
            
            <div class="mb-6">
              <textarea 
                name="interests" 
                placeholder="What are you curious about? What problems are you solving?" 
                rows="3"
                class="w-full px-4 py-3 bg-white/10 backdrop-blur border border-white/20 rounded-lg text-white placeholder-white/60 focus:outline-none focus:border-white/40 transition-colors resize-none"
              ></textarea>
            </div>
            
            <div class="mb-8 text-left">
              <label class="flex items-start gap-3 cursor-pointer">
                <input type="checkbox" name="updates" checked class="mt-1" />
                <span class="text-sm opacity-80">
                  Send me the Science Sunday Digest and notify me about special guests 
                  and breakthrough announcements
                </span>
              </label>
            </div>
            
            <Button 
              variant="primary" 
              size="large" 
              type="submit"
              className="w-full md:w-auto bg-white text-quantum-blue hover:bg-gray-100"
            >
              Save My Spot This Sunday
            </Button>
            
            <p class="text-sm opacity-60 mt-4">
              We'll never spam. Unsubscribe anytime.
            </p>
          </form>
        </Card>
      </div>
    </section>
    
    <!-- Final CTA -->
    <section class="py-20 px-6 bg-bg-primary text-center">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
          Replace Doom-Scrolling with <span class="text-gradient">Mind-Expanding</span>
        </h2>
        <p class="text-xl text-text-secondary mb-8">
          Make Sunday the day you connect with the future-builders. 
          Your next collaborator, your next breakthrough, your next adventure—they're all waiting.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <Button variant="primary" size="large" href="#rsvp" icon="mdi:calendar-check">
            RSVP Now
          </Button>
          <Button variant="outline" size="large" href="https://discord.com/invite/smarter" icon="mdi:discord">
            Join Discord
          </Button>
        </div>
        
        <div class="inline-flex items-center gap-2 text-sm text-text-tertiary">
          <Icon name="mdi:map-marker" class="w-4 h-4" />
          <span>KINN Venice • Every Sunday • 1-5 PM PST • Always Free</span>
        </div>
      </div>
    </section>
  </main>
  
  <style>
    /* Sunrise gradient background */
    .bg-gradient-sunrise {
      background: linear-gradient(180deg, 
        #0A0E27 0%, 
        #1A1F3A 20%,
        #2D3548 40%,
        #3D4558 60%,
        #4D5568 80%,
        #5D6578 100%
      );
    }
    
    .sunrise-gradient {
      position: absolute;
      inset: 0;
      background: radial-gradient(ellipse at bottom, rgba(249, 115, 22, 0.2) 0%, transparent 60%);
      animation: sunrise 20s ease-in-out infinite;
    }
    
    @keyframes sunrise {
      0%, 100% { opacity: 0.3; }
      50% { opacity: 0.6; }
    }
    
    /* Particle connections animation */
    .particle-connections {
      position: absolute;
      inset: 0;
      background-image: 
        radial-gradient(2px 2px at 20% 30%, rgba(37, 99, 235, 0.3), transparent),
        radial-gradient(2px 2px at 60% 70%, rgba(16, 185, 129, 0.3), transparent),
