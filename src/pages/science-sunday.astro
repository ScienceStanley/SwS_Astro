  <script>
    // Enhanced Countdown Timer
    function updateCountdown() {
      const now = new Date();
      const dayOfWeek = now.getDay();
      const daysUntilSunday = dayOfWeek === 0 ? 0 : 7 - dayOfWeek;
      
      let nextSunday = new Date(now);
      nextSunday.setDate(now.getDate() + daysUntilSunday);
      nextSunday.setHours(13, 0, 0, 0); // 1 PM PST
      
      // If it's Sunday and past 5 PM, target next Sunday
      if (dayOfWeek === 0 && now.getHours() >= 17) {
        nextSunday.setDate(nextSunday.getDate() + 7);
      }
      
      const timeDiff = nextSunday.getTime() - now.getTime();
      
      const days = Math.floor(timeDiff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((timeDiff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((timeDiff % (1000 * 60 * 60)) / (1000 * 60));
      
      const daysEl = document.querySelector('[data-days]');
      const hoursEl = document.querySelector('[data-hours]');
      const minutesEl = document.querySelector('[data-minutes]');
      
      if (daysEl) daysEl.textContent = days.toString();
      if (hoursEl) hoursEl.textContent = hours.toString().padStart(2, '0');
      if (minutesEl) minutesEl.textContent = minutes.toString().padStart(2, '0');
      
      // Special messaging for Sunday
      if (dayOfWeek === 0 && hours < 4) {
        const countdownEl = document.querySelector('[data-countdown]');
        if (countdownEl) {
          countdownEl.innerHTML = '<div class="text-2xl font-bold text-plasma-green animate-pulse">Happening Now!</div>';
        }
      }
    }
    
    // Update immediately and then every minute
    updateCountdown();
    setInterval(updateCountdown, 60000);
    
    // Enhanced RSVP Form
    const rsvpForm = document.querySelector('[data-rsvp-form]') as HTMLFormElement;
    
    if (rsvpForm) {
      rsvpForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(rsvpForm);
        const button = rsvpForm.querySelector('button[type="submit"]');
        const originalText = button?.textContent;
        
        if (button) {
          button.textContent = 'Confirming...';
          button.setAttribute('disabled', 'true');
        }
        
        // Simulate API call
        setTimeout(() => {
          // Show success state
          if (button) {
            button.textContent = '✓ See you Sunday!';
            button.style.background = '#10B981';
            
            // Add success message
            const successMsg = document.createElement('div');
            successMsg.className = 'mt-6 p-4 bg-white/10 rounded-lg text-center animate-fade-in';
            successMsg.innerHTML = `
              <p class="font-bold mb-2">You're all set!</p>
              <p class="text-sm opacity-80">Check your email for confirmation and our pre-Sunday primer.</p>
            `;
            rsvpForm.appendChild(successMsg);
            
            // Reset after delay
            setTimeout(() => {
              rsvpForm.reset();
              if (button) {
                button.textContent = originalText || 'Save My Spot This Sunday';
                button.removeAttribute('disabled');
                button.style.background = '';
              }
              successMsg.remove();
            }, 5000);
          }
        }, 1500);
      });
    }
    
    // Topic voting interaction
    document.querySelectorAll('[data-vote]').forEach(button => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        const voteCount = button.closest('.card')?.querySelector('.text-quantum-blue');
        if (voteCount) {
          const current = parseInt(voteCount.textContent);
          voteCount.textContent = (current + 1).toString();
          button.textContent = 'Voted!';
          button.setAttribute('disabled', 'true');
        }
      });
    });
