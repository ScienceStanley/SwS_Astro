---
import BaseLayout from '@layouts/BaseLayout.astro';
import PixelArt from '@components/ui/PixelArt.astro';
import PixelButton from '@components/ui/PixelButton.astro';
import PixelCard from '@components/ui/PixelCard.astro';
---

<BaseLayout title="Pixel UI Demo - SwS Design System" description="Preview of the new pixel art UI elements for Smarter with Science">
  <main class="min-h-screen py-20 px-6 pixel-background">
    <div class="max-w-7xl mx-auto">
      
      <!-- Header -->
      <section class="text-center mb-16">
        <h1 class="text-5xl font-display font-black mb-4 gradient-text">
          ðŸŽ® Pixel UI Components
        </h1>
        <p class="text-xl text-text-secondary">
          Cyberpunk-Utopian Design System Preview
        </p>
      </section>

      <!-- Navigation Logo -->
      <section class="mb-16">
        <h2 class="text-3xl font-display font-bold mb-8">Navigation Logo</h2>
        <div class="flex items-center gap-8">
          <div class="text-center">
            <PixelArt element="nav-logo-pixelart" alt="SwS Pixel Logo" className="pixel-logo" hover={true} />
            <p class="text-sm text-text-secondary mt-2">Hover for glow effect</p>
          </div>
          <div class="text-center">
            <div class="flex items-center gap-3 bg-gray-900 p-4 rounded">
              <PixelArt element="nav-logo-pixelart" alt="SwS Logo" className="pixel-logo" />
              <span class="text-xl font-display font-bold text-primary">SwS</span>
            </div>
            <p class="text-sm text-text-secondary mt-2">In navigation context</p>
          </div>
        </div>
      </section>

      <!-- Section Divider Demo -->
      <div class="pixel-divider animated"></div>

      <!-- Buttons -->
      <section class="mb-16">
        <h2 class="text-3xl font-display font-bold mb-8">Pixel Buttons</h2>
        <div class="flex flex-wrap gap-6">
          <div class="text-center">
            <PixelButton variant="primary">Join Discord</PixelButton>
            <p class="text-sm text-text-secondary mt-2">Primary Button</p>
          </div>
          <div class="text-center">
            <PixelButton variant="secondary">Learn More</PixelButton>
            <p class="text-sm text-text-secondary mt-2">Secondary Button</p>
          </div>
          <div class="text-center">
            <PixelButton variant="primary" disabled={true}>Loading...</PixelButton>
            <p class="text-sm text-text-secondary mt-2">Disabled State</p>
          </div>
        </div>
      </section>

      <!-- Icons -->
      <section class="mb-16">
        <h2 class="text-3xl font-display font-bold mb-8">Pixel Icons</h2>
        <div class="grid grid-cols-4 gap-8 max-w-lg">
          <div class="text-center">
            <PixelArt element="icon-discord-pixelart" alt="Discord" hover={true} />
            <p class="text-xs text-text-secondary mt-2">Discord</p>
          </div>
          <div class="text-center">
            <PixelArt element="icon-github-pixelart" alt="GitHub" hover={true} />
            <p class="text-xs text-text-secondary mt-2">GitHub</p>
          </div>
          <div class="text-center">
            <PixelArt element="icon-science-pixelart" alt="Science Icons" size="large" hover={true} />
            <p class="text-xs text-text-secondary mt-2">Science Set</p>
          </div>
          <div class="text-center">
            <div class="pixel-spinner"></div>
            <p class="text-xs text-text-secondary mt-2">Loading Spinner</p>
          </div>
        </div>
      </section>

      <!-- Progress Bar -->
      <section class="mb-16">
        <h2 class="text-3xl font-display font-bold mb-8">Progress Indicators</h2>
        <div class="space-y-6">
          <div>
            <label class="block text-sm font-medium mb-2">DNA Analysis Progress</label>
            <div class="pixel-progress" style="--progress: 75%;"></div>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Model Training</label>
            <div class="pixel-progress" style="--progress: 45%;"></div>
          </div>
        </div>
      </section>

      <div class="pixel-divider animated"></div>

      <!-- Project Cards -->
      <section class="mb-16">
        <h2 class="text-3xl font-display font-bold mb-8">Project Pixel Art Placeholders</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          
          <PixelCard project="ocean">
            <h3 class="text-xl font-bold mb-2">Ocean ViSION</h3>
            <p class="text-sm text-gray-300">AI-powered marine ecosystem monitoring</p>
          </PixelCard>

          <PixelCard project="medical">
            <h3 class="text-xl font-bold mb-2">Rare Disease AI</h3>
            <p class="text-sm text-gray-300">Machine learning for genetic condition identification</p>
          </PixelCard>

          <PixelCard project="quantum">
            <h3 class="text-xl font-bold mb-2">Quantum Biology</h3>
            <p class="text-sm text-gray-300">Exploring quantum effects in photosynthesis</p>
          </PixelCard>

          <PixelCard project="mesh">
            <h3 class="text-xl font-bold mb-2">Mesh Networks</h3>
            <p class="text-sm text-gray-300">Decentralized communication infrastructure</p>
          </PixelCard>

          <PixelCard project="vr">
            <h3 class="text-xl font-bold mb-2">STEAM VR Labs</h3>
            <p class="text-sm text-gray-300">Virtual reality science education</p>
          </PixelCard>

          <PixelCard project="algae">
            <h3 class="text-xl font-bold mb-2">Algae Protein</h3>
            <p class="text-sm text-gray-300">Sustainable protein production</p>
          </PixelCard>

        </div>
      </section>

      <div class="pixel-divider animated"></div>

      <!-- Hero Banner Preview -->
      <section class="mb-16">
        <h2 class="text-3xl font-display font-bold mb-8">Hero Banner Integration</h2>
        <div class="pixel-hero-banner p-12 rounded-lg text-center">
          <h3 class="text-4xl font-display font-bold mb-4 text-white">
            Science + Community = Exponential Impact
          </h3>
          <p class="text-xl text-gray-200 mb-6">
            Background pixel art integrates seamlessly with content
          </p>
          <PixelButton variant="primary">Join the Movement</PixelButton>
        </div>
      </section>

      <!-- Card Frame Demo -->
      <section class="mb-16">
        <h2 class="text-3xl font-display font-bold mb-8">Card Frames</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <PixelCard className="p-8">
            <h3 class="text-2xl font-bold mb-4">Data Crystal Frame</h3>
            <p class="text-text-secondary mb-4">
              This card uses pixel art frames for a retro-futuristic aesthetic
              while maintaining readability and accessibility.
            </p>
            <PixelButton variant="secondary">Explore</PixelButton>
          </PixelCard>

          <PixelCard className="p-8">
            <h3 class="text-2xl font-bold mb-4">Hover for Glow</h3>
            <p class="text-text-secondary mb-4">
              Hover effects enhance the cyberpunk theme with subtle
              lighting animations and transforms.
            </p>
            <PixelButton variant="primary">Interact</PixelButton>
          </PixelCard>
        </div>
      </section>

      <!-- Integration Notes -->
      <section class="mb-16">
        <div class="glass-surface p-8 rounded-lg">
          <h2 class="text-2xl font-display font-bold mb-4">ðŸ”§ Integration Status</h2>
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <h3 class="text-lg font-bold mb-3 text-green-400">âœ… Completed</h3>
              <ul class="space-y-2 text-sm">
                <li>â€¢ Pixel art generation (18 elements)</li>
                <li>â€¢ CSS component library</li>
                <li>â€¢ Reusable Astro components</li>
                <li>â€¢ Responsive scaling</li>
                <li>â€¢ Accessibility optimizations</li>
              </ul>
            </div>
            <div>
              <h3 class="text-lg font-bold mb-3 text-yellow-400">ðŸš§ Next Steps</h3>
              <ul class="space-y-2 text-sm">
                <li>â€¢ Replace navigation logo</li>
                <li>â€¢ Update project gallery images</li>
                <li>â€¢ Add section dividers to pages</li>
                <li>â€¢ Integrate hero banner layers</li>
                <li>â€¢ Update social media icons</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- Performance Notes -->
      <section class="mb-16">
        <div class="bg-gray-900 p-6 rounded-lg border border-primary/20">
          <h3 class="text-lg font-bold mb-3">ðŸ“Š Performance Impact</h3>
          <div class="grid md:grid-cols-3 gap-4 text-sm">
            <div>
              <div class="text-primary font-mono">+180KB</div>
              <div class="text-gray-400">Total image size</div>
            </div>
            <div>
              <div class="text-secondary font-mono">18 files</div>
              <div class="text-gray-400">New assets added</div>
            </div>
            <div>
              <div class="text-green-400 font-mono">Lazy loaded</div>
              <div class="text-gray-400">Loading strategy</div>
            </div>
          </div>
        </div>
      </section>

    </div>
  </main>
</BaseLayout>

<style>
  .gradient-text {
    background: var(--neural-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    filter: drop-shadow(0 0 20px rgba(102, 51, 153, 0.5));
  }
</style>