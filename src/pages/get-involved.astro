<script>
  // Donation amount selection
  document.addEventListener('DOMContentLoaded', () => {
    const donationButtons = document.querySelectorAll('.donation-button');
    let selectedAmount = '100'; // default

    donationButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Remove active class from all buttons
        donationButtons.forEach(b => b.classList.remove('active'));
        
        // Add active class to clicked button
        button.classList.add('active');
        
        // Store selected amount
        selectedAmount = button.getAttribute('data-amount') || '100';
        
        // Update donate button (you would integrate with actual payment processor)
        const donateButton = document.querySelector('.donate-now-button');
        if (donateButton && selectedAmount !== 'custom') {
          donateButton.href = `#donate-${selectedAmount}`;
        }
      });
    });

    // Set default selection
    const defaultButton = document.querySelector('.donation-button[data-amount="100"]');
    if (defaultButton) {
      defaultButton.classList.add('active');
    }

    // Scroll reveal animation
    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const element = entry.target;
          const delay = element.getAttribute('data-delay') || 0;
          
          setTimeout(() => {
            element.classList.add('revealed');
          }, parseInt(delay));
          
          observer.unobserve(element);
        }
      });
    }, observerOptions);

    // Observe all elements with data-scroll-reveal
    const elements = document.querySelectorAll('[data-scroll-reveal]');
    elements.forEach(el => observer.observe(el));
  });
</script>