---
import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/sections/Hero.astro';
import Features from '@components/sections/Features.astro';
import ContentSection from '@components/layout/ContentSection.astro';
import Card from '@components/ui/Card.astro';
import StatCounter from '@components/ui/StatCounter.astro';
import { Icon } from 'astro-icon/components';

const pageTitle = 'Smarter with Science - Community-Powered Scientific Discovery';
const pageDescription = 'Join Science Stanley and the SwS movement. We provide computational resources, operational support, and community connections to accelerate scientific breakthroughs.';

// Features data
const features = [
  {
    title: "Computational Power",
    description: "50,000+ GPU hours donated to researchers solving humanity's greatest challenges",
    icon: "mdi:gpu",
    color: "primary" as const,
  },
  {
    title: "Community Support",
    description: "5,000+ scientists, engineers, and curious minds collaborating across disciplines",
    icon: "mdi:account-group",
    color: "secondary" as const,
  },
  {
    title: "Open Science",
    description: "All research findings shared openly, accelerating discovery for everyone",
    icon: "mdi:book-open-variant",
    color: "accent-green" as const,
  },
  {
    title: "Project Incubation",
    description: "From idea to impact: full-stack support for breakthrough research projects",
    icon: "mdi:rocket-launch",
    color: "accent-pink" as const,
  },
  {
    title: "Science Sundays",
    description: "Weekly gatherings where curiosity meets coffee and breakthroughs are born",
    icon: "mdi:calendar-star",
    color: "accent-cyan" as const,
  },
  {
    title: "Funding Amplification",
    description: "Connecting researchers with resources, from compute credits to venture capital",
    icon: "mdi:currency-usd",
    color: "primary" as const,
  },
];

// Testimonials data
const testimonials = [
  {
    quote: "SwS provided the GPU hours that made our rare disease AI possible. We've identified 127 conditions 73% faster than traditional methods.",
    author: "Dr. Sarah Chen",
    role: "Lead Researcher, RareGenomics",
  },
  {
    quote: "The community here doesn't just talk about problems—they solve them. Our ocean monitoring system is now tracking 50,000+ species in real-time.",
    author: "Marcus Rodriguez",
    role: "Founder, Ocean ViSION",
  },
  {
    quote: "Science Sunday changed my life. I went from curious attendee to leading a quantum biology research project in 6 months.",
    author: "Emily Watson",
    role: "Community Researcher",
  },
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <Hero 
    title="Smarter with Science"
    subtitle="Where cutting-edge research meets community power. Together, we're accelerating breakthroughs that matter."
    tagline="Science plus community equals exponential impact"
    primaryCTA={{
      text: "Join the Movement",
      href: "https://discord.com/invite/smarter",
      icon: "mdi:discord"
    }}
    secondaryCTA={{
      text: "Explore Projects",
      href: "/projects",
      icon: "mdi:telescope"
    }}
  />

  <!-- Impact Stats -->
  <ContentSection theme="dark" padding="small">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      <div>
        <div class="text-4xl md:text-5xl font-bold font-display text-primary">
          <StatCounter end={47} />
        </div>
        <p class="text-text-offset mt-2">Breakthrough Discoveries</p>
      </div>
      <div>
        <div class="text-4xl md:text-5xl font-bold font-display text-secondary">
          <StatCounter end={50000} separator="," />+
        </div>
        <p class="text-text-offset mt-2">GPU Hours Donated</p>
      </div>
      <div>
        <div class="text-4xl md:text-5xl font-bold font-display text-accent-green">
          <StatCounter end={5000} separator="," />+
        </div>
        <p class="text-text-offset mt-2">Community Members</p>
      </div>
      <div>
        <div class="text-4xl md:text-5xl font-bold font-display text-accent-pink">
          <StatCounter end={12} />M+
        </div>
        <p class="text-text-offset mt-2">Lives Impacted</p>
      </div>
    </div>
  </ContentSection>

  <!-- Mission Statement -->
  <ContentSection 
    title="Our |Mission|"
    subtitle="Smarter with Science (SwS) is building the future of collaborative research"
    centered
    theme="default"
  >
    <div class="max-w-3xl mx-auto space-y-6 text-lg text-text-offset">
      <p>
        We believe humanity's greatest challenges—from rare diseases to climate change—require 
        not just brilliant minds, but connected communities. SwS provides the infrastructure, 
        resources, and connections that transform individual curiosity into collective breakthrough.
      </p>
      <p>
        Founded by Science Stanley, a rare disease patient turned science advocate, we've built 
        a movement where everyone—from Nobel laureates to curious beginners—contributes to 
        advancing human knowledge.
      </p>
    </div>
    <div class="mt-8 flex justify-center">
      <a 
        href="/charter" 
        class="inline-flex items-center gap-2 text-primary hover:text-secondary transition-colors font-semibold"
      >
        Read Our Charter
        <Icon name="mdi:arrow-right" class="w-5 h-5" />
      </a>
    </div>
  </ContentSection>

  <!-- Features Grid -->
  <Features 
    title="What We |Provide|"
    subtitle="Full-stack support for researchers and innovators"
    features={features}
    columns={3}
  />

  <!-- Testimonials -->
  <ContentSection
    title="Real Impact, |Real Stories|"
    subtitle="Hear from the researchers and innovators we've empowered"
    theme="dark"
    centered
  >
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <Card variant="glass" className={`animate-fade-up animation-delay-${(index + 1) * 200}`}>
          <blockquote class="space-y-4">
            <p class="text-text-offset italic">"{testimonial.quote}"</p>
            <footer>
              <p class="font-semibold text-text">{testimonial.author}</p>
              <p class="text-sm text-text-muted">{testimonial.role}</p>
            </footer>
          </blockquote>
        </Card>
      ))}
    </div>
  </ContentSection>

  <!-- Science Sunday CTA -->
  <ContentSection theme="alternate">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
          Join Us This <span class="gradient-text">Sunday</span>
        </h2>
        <p class="text-xl text-text-offset mb-6">
          Every Sunday, 1-5 PM at KINN Venice Beach, we gather to explore the 
          frontiers of science. No PhD required—just bring your curiosity.
        </p>
        <ul class="space-y-3 mb-8">
          <li class="flex items-start gap-3">
            <Icon name="mdi:check-circle" class="w-6 h-6 text-accent-green flex-shrink-0 mt-0.5" />
            <span class="text-text-offset">Meet researchers working on cutting-edge projects</span>
          </li>
          <li class="flex items-start gap-3">
            <Icon name="mdi:check-circle" class="w-6 h-6 text-accent-green flex-shrink-0 mt-0.5" />
            <span class="text-text-offset">Learn complex science through engaging discussions</span>
          </li>
          <li class="flex items-start gap-3">
            <Icon name="mdi:check-circle" class="w-6 h-6 text-accent-green flex-shrink-0 mt-0.5" />
            <span class="text-text-offset">Find collaborators for your next breakthrough</span>
          </li>
        </ul>
        <a 
          href="/science-sunday" 
          class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-background font-semibold rounded-lg hover:bg-primary/90 transition-colors"
        >
          Learn More About Science Sunday
          <Icon name="mdi:arrow-right" class="w-5 h-5" />
        </a>
      </div>
      <div class="relative">
        <div class="aspect-square rounded-2xl bg-gradient-to-br from-primary/20 to-secondary/20 flex items-center justify-center">
          <Icon name="mdi:calendar-star" class="w-32 h-32 text-primary opacity-50" />
        </div>
        <div class="absolute -top-4 -right-4 px-4 py-2 bg-accent-green text-background font-bold rounded-full">
          Free & Open
        </div>
      </div>
    </div>
  </ContentSection>

  <!-- Final CTA -->
  <ContentSection theme="glass" centered>
    <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
      Ready to Make Science <span class="gradient-text">Smarter</span>?
    </h2>
    <p class="text-xl text-text-offset max-w-2xl mx-auto mb-8">
      Whether you're a researcher needing resources, a developer wanting to contribute, 
      or simply curious about science, there's a place for you in our community.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a 
        href="https://discord.com/invite/smarter" 
        class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-primary text-background font-semibold rounded-lg hover:bg-primary/90 transition-all hover:-translate-y-0.5 hover:shadow-glow-primary"
      >
        <Icon name="mdi:discord" class="w-6 h-6" />
        Join Our Discord
      </a>
      <a 
        href="/resources" 
        class="inline-flex items-center justify-center gap-2 px-8 py-4 border-2 border-primary text-primary font-semibold rounded-lg hover:bg-primary hover:text-background transition-all hover:-translate-y-0.5 hover:shadow-glow-primary"
      >
        <Icon name="mdi:book-open-variant" class="w-6 h-6" />
        Browse Resources
      </a>
    </div>
  </ContentSection>
</BaseLayout>

<style>
  /* Animation utilities */
  .animation-delay-200 {
    animation-delay: 200ms;
  }
  .animation-delay-400 {
    animation-delay: 400ms;
  }
  .animation-delay-600 {
    animation-delay: 600ms;
  }
</style>