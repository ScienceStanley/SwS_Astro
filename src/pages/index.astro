---
import BaseLayout from '@layouts/BaseLayout.astro';
import PixelButton from '@components/ui/PixelButton.astro';
import PixelArtButton from '@components/ui/PixelArtButton.astro';
import PixelArtCard from '@components/ui/PixelArtCard.astro';
import GhibliPixelBanner from '@components/ui/GhibliPixelBanner.astro';
import PixelDivider from '@components/ui/PixelDivider.astro';
// import NeoDevCodeBlock from '@components/ui/NeoDevCodeBlock.astro';
// import GhibliProjectCard from '@components/ui/GhibliProjectCard.astro';
---

<BaseLayout>
  <main class="min-h-screen relative">
    <!-- Hero Section with Space Background -->
    <section class="relative h-screen flex items-center justify-center overflow-hidden" style="background-image: url('/images/space.jpg'); background-size: cover; background-position: center;">
      <!-- Dark overlay for readability -->
      <div class="absolute inset-0 bg-black bg-opacity-50"></div>
      
      <div class="relative z-10 text-center px-6 max-w-5xl mx-auto">
        <!-- Ghibli Pixel Art Banner -->
        <div class="mb-8 animate-particle-emergence">
          <img src="/generated-images/banner-ghibli-sws-1.png" alt="Smarter with Science - Studio Ghibli Pixel Art Banner" class="mx-auto max-w-full h-auto border-2 border-neon-cyan shadow-glow" style="max-height: 400px; image-rendering: pixelated;">
        </div>
        
        <!-- Mission Statement -->
        <div class="mb-12 animate-particle-emergence animation-delay-200">
          <h2 class="text-2xl md:text-4xl font-display font-bold text-white mb-4">
            Science + Community = Exponential Impact
          </h2>
          <p class="text-lg md:text-xl text-text-tertiary max-w-3xl mx-auto">
            We're turning the traditional model upside down: instead of scientists begging for resources, 
            resources flow to scientists solving real problems.
          </p>
        </div>
        
        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-particle-emergence animation-delay-400">
          <PixelArtButton variant="primary" size="large" href="/get-involved" icon="arrow-right" iconPosition="right">
            Join the Movement
          </PixelArtButton>
          <PixelArtButton variant="secondary" size="large" href="/projects" icon="science" iconPosition="left">
            Explore Projects
          </PixelArtButton>
        </div>
        
        <!-- Live Metrics Preview -->
        <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-6 animate-particle-emergence animation-delay-600">
          <div class="neodev-card p-4 rounded-lg">
            <div class="text-3xl font-display font-bold text-neon-cyan">1,247</div>
            <div class="text-sm text-text-secondary">Active Researchers</div>
          </div>
          <div class="neodev-card p-4 rounded-lg">
            <div class="text-3xl font-display font-bold text-electric-teal">2.4M</div>
            <div class="text-sm text-text-secondary">GPU Hours Donated</div>
          </div>
          <div class="neodev-card p-4 rounded-lg">
            <div class="text-3xl font-display font-bold text-neon-cyan">89</div>
            <div class="text-sm text-text-secondary">Active Projects</div>
          </div>
          <div class="neodev-card p-4 rounded-lg">
            <div class="text-3xl font-display font-bold text-electric-teal">47K</div>
            <div class="text-sm text-text-secondary">Lives Impacted</div>
          </div>
        </div>
      </div>
      
        <!-- Scroll Indicator -->
        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
          <svg width="30" height="50" viewBox="0 0 30 50" class="text-neon-cyan opacity-40">
            <rect x="10" y="10" width="10" height="20" rx="5" stroke="currentColor" stroke-width="1" fill="none"/>
            <circle cx="15" cy="20" r="2" fill="currentColor" class="animate-data-stream"/>
          </svg>
        </div>
      </div>
    </section>
    
    <!-- Pixel Divider -->
    <PixelDivider variant="data" color="#00ffff" animated={true} />
    
    <!-- Code Demo Section -->
    <section class="py-20 px-6" style="background: linear-gradient(to bottom, #000000, #0a0a0a);">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-display text-center mb-12 text-gradient">
          How Science Gets Smarter
        </h2>
        <div class="neodev-card p-8">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-2xl font-mono text-neon-cyan">Discovery Engine</h3>
            <div class="flex gap-2">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            </div>
          </div>
          <div class="bg-black p-4 rounded border border-border-primary font-mono text-sm">
            <div class="text-text-muted">// Breakthrough discovery pipeline</div>
            <div class="text-code-keyword">function</div> <div class="text-code-function inline">accelerateDiscovery</div><span class="text-white">(</span><span class="text-code-variable">community, resources</span><span class="text-white">) {</span>
            <div class="ml-4 text-code-keyword">const</div> <div class="text-code-variable inline">impact</div> = <div class="text-code-string inline">"exponential"</div><span class="text-white">;</span>
            <div class="ml-4 text-code-keyword">return</div> <div class="text-code-variable inline">breakthrough</div><span class="text-white">;</span>
            <span class="text-white">}</span>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Pixel Divider -->
    <PixelDivider variant="wave" color="#00d4aa" animated={true} />
    
    <!-- Quick Navigation -->
    <section class="py-20 px-6">
      <!-- IMAGE_PROMPT[navigation-section-bg]
      Style: Subtle abstract constellation pattern, very dark and minimal
      Mood: Mysterious, expansive, guiding
      Elements: Faint constellation lines connecting distant stars, subtle purple glow at connection points, mostly dark space
      Colors: Background #101010, very faint purple #a476ff lines (10% opacity), tiny green #A9FF5B star points
      Dimensions: 1920x800
      Variations: 2
      -->
      
      <div class="max-w-7xl mx-auto">
        <h2 class="text-4xl font-display text-center mb-12 gradient-text">
          Explore the Constellation
        </h2>
        
        <div class="neodev-grid neodev-grid-3">
          <!-- Featured Projects with Pixel Art Cards -->
          <PixelArtCard variant="project" glowColor="#00d4aa" href="/projects#ocean-vision">
            <h3 class="text-2xl font-display font-bold mb-4 text-gradient">Ocean ViSION</h3>
            <p class="text-text-secondary mb-4">AI-powered marine ecosystem monitoring to track climate change impacts in real-time</p>
            <div class="text-sm text-neon-cyan font-bold">50,000+ marine species tracked</div>
          </PixelArtCard>
          
          <PixelArtCard variant="project" glowColor="#00ff88" href="/projects#rare-disease">
            <h3 class="text-2xl font-display font-bold mb-4 text-gradient">Rare Disease AI</h3>
            <p class="text-text-secondary mb-4">Machine learning models trained on community data to identify rare genetic conditions</p>
            <div class="text-sm text-electric-teal font-bold">127 conditions identified faster</div>
          </PixelArtCard>
          
          <PixelArtCard variant="project" glowColor="#9370db" href="/projects#quantum-bio">
            <h3 class="text-2xl font-display font-bold mb-4 text-gradient">Quantum Biology Lab</h3>
            <p class="text-text-secondary mb-4">Exploring quantum effects in photosynthesis to develop efficient solar panels</p>
            <div class="text-sm text-neon-cyan font-bold">3x efficiency improvement</div>
          </PixelArtCard>
          
          <!-- Navigation Cards with Pixel Art -->
          <PixelArtCard variant="science-sunday" glowColor="#87ceeb" href="/science-sunday">
            <h3 class="text-2xl font-display font-bold mb-4 text-ghibli">
              Science Sunday
            </h3>
            <p class="text-text-secondary mb-4">
              Church for the Curious - Join us every Sunday in Venice Beach for hands-on science exploration
            </p>
            <div class="mt-auto">
              <PixelArtButton variant="ghost" size="small" icon="arrow-right" iconPosition="right">
                Learn More
              </PixelArtButton>
            </div>
          </PixelArtCard>
          
          <PixelArtCard variant="default" glowColor="#00ffff" href="/projects">
            <h3 class="text-2xl font-display font-bold mb-4 text-gradient">
              All Projects
            </h3>
            <p class="text-text-secondary mb-4">
              From rare disease research to ocean conservation - see how we're accelerating breakthroughs
            </p>
            <div class="mt-auto">
              <PixelArtButton variant="ghost" size="small" icon="arrow-right" iconPosition="right">
                Explore
              </PixelArtButton>
            </div>
          </PixelArtCard>
          
          <PixelArtCard variant="charter" glowColor="#663399" href="/charter">
            <h3 class="text-2xl font-display font-bold mb-4 text-gradient">
              Our Charter
            </h3>
            <p class="text-text-secondary mb-4">
              Read our manifesto for community-powered discovery and join the constellation
            </p>
            <div class="mt-4">
              <div class="h-4 bg-black/50 rounded overflow-hidden">
                <div class="h-full bg-gradient-to-r from-purple-500 to-cyan-500" style="width: 85%"></div>
              </div>
              <span class="text-neon-cyan font-mono text-sm mt-2 block">
                Constellation Progress: 85%
              </span>
            </div>
          </PixelArtCard>
        </div>
      </div>
    </section>
  </main>
  
  <style>
    .animation-delay-200 {
      animation-delay: 200ms;
    }
    
    .animation-delay-400 {
      animation-delay: 400ms;
    }
    
    .animation-delay-600 {
      animation-delay: 600ms;
    }
    
    .bg-gradient-radial {
      background: radial-gradient(circle at center, var(--tw-gradient-from), var(--tw-gradient-to));
    }
  </style>
  
  <!-- Magnetic Hover Effect -->
  <script>
    const magneticElements = document.querySelectorAll('.magnetic');
    magneticElements.forEach(el => {
      el.addEventListener('mousemove', (e) => {
        const rect = el.getBoundingClientRect();
        const x = e.clientX - rect.left - rect.width / 2;
        const y = e.clientY - rect.top - rect.height / 2;
        
        el.style.transform = `translate(${x * 0.1}px, ${y * 0.1}px)`;
      });
      
      el.addEventListener('mouseleave', () => {
        el.style.transform = 'translate(0, 0)';
      });
    });
  </script>
</BaseLayout>
